<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Main3Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/infoimage1"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:contentDescription="TODO"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoimage1"
                android:gravity="clip_horizontal"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/place_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view1"
                android:background="#ff6000"
                android:paddingEnd="5dp"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_price"
                android:layout_centerHorizontal="true"
                android:background="@color/cardview_light_background"
                android:paddingEnd="5dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/bh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/place_code"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_background_5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_background_2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Bus"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/train"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_background_2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Train"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/air"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_background_2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Air"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bh"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_background_4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_background_5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Single"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/s2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_background_5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Couple"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/s5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_background_5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Quintuple(5)"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <Button
                android:id="@+id/book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_background_6"
                android:text="choose" />

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_background_3"
                android:text="Home" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>